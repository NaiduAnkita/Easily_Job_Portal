<div class="container" id="error-page">
  <div class="gif">
    <img src="https://i.postimg.cc/2yrFyxKv/giphy.gif" alt="gif_ing" />
  </div>
  <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
 <div class="error-container">
    <!-- <div class="error-title"><%=title%></div> -->
    <div class="error-description">Oops! <%= errors[0].msg %></div>
    <p style="color: white;">The Job you are looking for might be in another universe.</p>
    <a href="/" class="error-button">Go back to Home <i class="fa-solid fa-house"></i></a>
</div>
<% } else { %>
    <div class="error-container">
        <div class="error-title">404</div>
        <div class="error-description">Oops! Page Not Found!</div>
        <p style="color: white;">The page you are looking for might be in another universe.</p>
        <a href="/" class="error-button">Go back to Home <i class="fa-solid fa-house"></i></a>
    </div>
<% } %>
</div>
