
<h2>Register</h2>
<% if (errors && errors.length) { %>
  <div class="alert"><ul><% errors.forEach(e => { %><li><%= e.msg %></li><% }) %></ul></div>
<% } %>
<form method="post" action="/register" class="form">
  <label>Name <input name="name" value="<%= (old && old.name) || '' %>" required /></label>
  <label>Email <input name="email" type="email" value="<%= (old && old.email) || '' %>" required /></label>
  <label>Password <input name="password" type="password" required /></label>
  <button class="btn btn-primary">Create account</button>
</form>
