
<h2>Post a new job</h2>
<% if (errors && errors.length) { %>
  <div class="alert"><ul><% errors.forEach(e => { %><li><%= e.msg %></li><% }) %></ul></div>
<% } %>
<form method="post" action="/jobs" class="form grid-2">
  <label>Category <input name="jobcategory" required /></label>
  <label>Designation <input name="jobdesignation" required /></label>
  <label>Location <input name="joblocation" required /></label>
  <label>Company <input name="companyname" required /></label>
  <label>Salary <input name="salary" required /></label>
  <label>Apply by <input name="applyby" type="date" required /></label>
  <label>Skills (comma separated) <input name="skillsrequired" placeholder="e.g. JS, Node, Express" /></label>
  <label>Openings <input name="numberofopenings" type="number" min="1" required /></label>
  <button class="btn btn-primary">Create</button>
</form>
